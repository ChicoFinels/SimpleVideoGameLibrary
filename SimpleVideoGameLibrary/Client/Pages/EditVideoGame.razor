@page "/videogame"
@page "/videogame/{id:int}"

@if (Id is null)
{
	<PageTitle>Create a New Video Game</PageTitle>
	<h3>Create a New Video Game</h3>
}
else
{
	<PageTitle>Edit @game.Name</PageTitle>
	<h3>Edit @game.Name</h3>
}


@code {
	[Parameter]
	public int? Id { get; set; }
	VideoGame game = new VideoGame { Name = "New Game" };
}
